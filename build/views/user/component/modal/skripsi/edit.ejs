  class="modal fade"
  id="edit"
  tabindex="-1"
  aria-labelledby="editLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-primary" id="editLabel"><i class="bi bi-chevron-right"></i> Edit Skripsi</h5>
