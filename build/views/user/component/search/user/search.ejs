<div class="container-fluid mb-3" data-aos="fade-up" data-aos-duration="750">
  <div
    class="row justify-content-center py-5"
    style="background-color: rgb(13, 110, 253)"
  >
    <div class="col-6 text-center text-light">
      <form role="search" method="post" action="/user/search">
        <div class="input-group">
          <select class="form-select mb-3" name="category" id="search" required
          style="border-color: rgb(25, 135, 84)">
            <option value="mahasiswa"
            <% if (category && category === 'mahasiswa') { %>
             selected
            <% } %>
            >Mahasiswa</option>
            <option value="dosen"
            <% if (category && category === 'dosen') { %>
              selected
             <% } %>
             >Dosen</option>
          </select>
          <select class="form-select mb-3" name="column" id="search" required
          style="border-color: rgb(25, 135, 84)">
            <option value="name"
            <% if (column && column === 'name') { %>
             selected
            <% } %>
            >Nama</option>
            <option value="nim"
            <% if (column && column === 'nim') { %>
              selected
             <% } %>
             >ID</option>
          </select>
        </div>
        <div class="input-group">
          <input
            class="form-control"
            style="border-color: rgb(248, 249, 250)"
            type="search"
            name="query"
            value="<%= query %>"
            placeholder="Cari"
            aria-label="Search"
            autocomplete="off"
          />
          <button
            class="btn btn-primary"
            style="border-color: rgb(248, 249, 250)"
            type="submit"
          >
            <i class="bi bi-search"></i> Cari
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
